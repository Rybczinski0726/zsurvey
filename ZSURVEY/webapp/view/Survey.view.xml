<mvc:View 
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="com.sds.erp.ZSURVEY.controller.Survey"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<NavContainer id="wizardNavContainer">
		<pages>
			<Page id="wizardContentPage" title="설문">
				<content>
				
					<Wizard 
						id="CreateSurveyWizard"
						complete="onNavToSubmit"
						enableBranching="true"
						finishButtonText="제출">
						
						<WizardStep 
							id="Step1"
							title="현재 어떤 ERP를 사용하고 계십니까?"
							subsequentSteps="Step2"
							complete="goToStep2"
							validated="true">
							
							<RadioButtonGroup columns="1" valueState="None" >
								<buttons>
									<RadioButton useEntireWidth="true" id="RB1-1" text="SAP"/>
									<RadioButton useEntireWidth="true" id="RB1-2" text="Oracle"/>
									<RadioButton useEntireWidth="true" id="RB1-3" text="자체 개발"/>
									<RadioButton useEntireWidth="true" id="RB1-4" text="기타"/>
								</buttons>
							</RadioButtonGroup>										
							
						</WizardStep>

						<WizardStep 
							id="Step2"
							title="현재 사용중인 ERP를 Upgrade 또는 타사 제품으로 재구축 예정이십니까?"
							subsequentSteps="Step2Yes, Step3"
							complete="selectedAtStep2"
							validated="true">
							<HBox
								alignItems="Center"
								justifyContent="Center"
								width="100%">
								<SegmentedButton
								    id="idStep2YesNo"
									width="320px"
									selectionChange="setAnswerAtStep2"
									selectedKey="{/selectedAnswerAtStep2}">
									<items>
										<SegmentedButtonItem key="Yes" icon="sap-icon://accept" text="네" />
										<SegmentedButtonItem key="No" icon="sap-icon://decline" text="아니오" />
									</items>	
								</SegmentedButton>
							</HBox>
						</WizardStep>

						<WizardStep 
							id="Step2Yes"
							title="상세질문"
							subsequentSteps="Step3"
							complete="endStep2"
							validated="true">

							<l:VerticalLayout id="containerLayout" width="100%" >
								<Text text=""/>
								<ObjectIdentifier title="재구축 예정 시기는 언제입니까? "/>								
								<Text text=""/>
								<RadioButtonGroup columns="1" valueState="None" >
									<buttons>
										<RadioButton useEntireWidth="true" id="RB31-1" text="6개월 이내"/>
										<RadioButton useEntireWidth="true" id="RB31-2" text="1년 이내"/>
										<RadioButton useEntireWidth="true" id="RB31-3" text="3년 이내"/>
										<RadioButton useEntireWidth="true" id="RB31-4" text="미정"/>
									</buttons>
								</RadioButtonGroup>	
								
								<Text text=""/>
								<ObjectIdentifier title="삼성 SDS의 도움이 필요하신 부분은 무엇입니까?"/>	
								<Text text=""/>
								<RadioButtonGroup columns="1" valueState="None" >
									<buttons>
										<RadioButton useEntireWidth="true" id="RB32-1" text="운영수준 진단"/>
										<RadioButton useEntireWidth="true" id="RB32-2" text="ISP"/>
										<RadioButton useEntireWidth="true" id="RB32-3" text="PI"/>
										<RadioButton useEntireWidth="true" id="RB32-4" text="구축"/>
									</buttons>
								</RadioButtonGroup>	
								
								
								<Text text=""/>
								<ObjectIdentifier title="가장 개선을 필요로 하는 영역은 무엇입니까? "/>	
								<Text text=""/>								
								<RadioButtonGroup columns="1" valueState="None" >
									<buttons>
										<RadioButton useEntireWidth="true" id="RB33-1" text="경영관리"/>
										<RadioButton useEntireWidth="true" id="RB33-2" text="영업/마케팅"/>
										<RadioButton useEntireWidth="true" id="RB33-3" text="제조/물류"/>
										<RadioButton useEntireWidth="true" id="RB33-4" text="인프라"/>
										<RadioButton useEntireWidth="true" id="RB33-5" text="기타"/>
									</buttons>
								</RadioButtonGroup>								
							
							</l:VerticalLayout>
							
						</WizardStep>

						<WizardStep 
							id="Step3"
							title="디지털혁신 관련 신기술 중 가장 관심이 많은 것은 무엇입니까?"
							subsequentSteps="Step4"
							complete="goToStep4"
							validated="true">
							<RadioButtonGroup columns="1" valueState="None" >
								<buttons>
									<RadioButton useEntireWidth="true" id="RB3-1" text="Cloud"/>
									<RadioButton useEntireWidth="true" id="RB3-2" text="RPA"/>
									<RadioButton useEntireWidth="true" id="RB3-3" text="AI"/>
									<RadioButton useEntireWidth="true" id="RB3-4" text="Blockchain"/>
									<RadioButton useEntireWidth="true" id="RB3-5" text="기타"/>
								</buttons>
							</RadioButtonGroup>	
						</WizardStep>

						<WizardStep 
							id="Step4"
							title="현재 상용중인 시스템의 Cloud 전환을 고려하고 계십니까?"
							subsequentSteps="Step4Yes, Step5"
							complete="selectedAtStep4"
							validated="true">
							<HBox
								alignItems="Center"
								justifyContent="Center"
								width="100%">
								<SegmentedButton
								    id="idStep4YesNo"
									width="320px"
									selectionChange="setAnswerAtStep4"
									selectedKey="{/selectedAnswerAtStep4}">
									<items>
										<SegmentedButtonItem key="Yes" icon="sap-icon://accept" text="네" />
										<SegmentedButtonItem key="No" icon="sap-icon://decline" text="아니오" />
									</items>	
								</SegmentedButton>
							</HBox>
						</WizardStep>

						<WizardStep 
							id="Step4Yes"
							title="상세질문"
							subsequentSteps="Step5"
							complete="endStep4"
							validated="true">
							<l:VerticalLayout width="100%" >
								<Text text=""/>
								<ObjectIdentifier title="전환 예정 시기는 언제입니까? "/>								
								<Text text=""/>
								<RadioButtonGroup columns="1" valueState="None" >
									<buttons>
										<RadioButton useEntireWidth="true" id="RB41-1" text="6개월 이내"/>
										<RadioButton useEntireWidth="true" id="RB41-2" text="1년 이내"/>
										<RadioButton useEntireWidth="true" id="RB41-3" text="3년 이내"/>
										<RadioButton useEntireWidth="true" id="RB41-4" text="미정"/>
									</buttons>
								</RadioButtonGroup>	
							</l:VerticalLayout>
						</WizardStep>

						<WizardStep 
							id="Step5"
							title="SaaS 솔루션의 도입을 검토하고 계신가요? "
							complete="selectedAtStep5"
							subsequentSteps="Step5Yes, Step6"
							validated="true">
							<HBox
								alignItems="Center"
								justifyContent="Center"
								width="100%">
								<SegmentedButton
								    id="idStep5YesNo"
									width="320px"
									selectionChange="setAnswerAtStep5"
									selectedKey="{/selectedAnswerAtStep5}">
									<items>
										<SegmentedButtonItem key="Yes" icon="sap-icon://accept" text="네" />
										<SegmentedButtonItem key="No" icon="sap-icon://decline" text="아니오" />
									</items>	
								</SegmentedButton>
							</HBox>
						</WizardStep>

						<WizardStep 
							id="Step5Yes"
							title="상세질문"
							subsequentSteps="Step6"
							complete="endStep5"
							validated="true">
							<l:VerticalLayout width="100%" >
								<Text text=""/>
								<ObjectIdentifier title="어떤 솔루션을 검토하고 계신가요? "/>								
								<Text text=""/>
								<RadioButtonGroup columns="1" valueState="None" >
									<buttons>
										<RadioButton useEntireWidth="true" id="RB51-1" text="SFDC"/>
										<RadioButton useEntireWidth="true" id="RB51-2" text="Workday"/>
										<RadioButton useEntireWidth="true" id="RB51-3" text="Concur"/>
										<RadioButton useEntireWidth="true" id="RB51-4" text="Ariba"/>
										<RadioButton useEntireWidth="true" id="RB51-5" text="기타"/>
									</buttons>
								</RadioButtonGroup>	
							</l:VerticalLayout>
						</WizardStep>

						<WizardStep 
							id="Step6"
							title="디지털 혁신 또는 IT 운영 효율화를 위해 SDS의 지원이 필요한 부분을 자유롭게 기술해 주십시요."
							complete="onNavToSubmit"
							validated="true">
							<TextArea width="100%" value="{/productDescription}" rows="8"/>
						</WizardStep>


					</Wizard>
					
				</content>

				<!--<footer>
					<OverflowToolbar id="otbFooter">
						<ToolbarSpacer/>
						<Button width="100%" type="Default" text="완료" press=".onNavToSubmit">
							<layoutData><OverflowToolbarLayoutData priority="NeverOverflow" /></layoutData>
						</Button>
					</OverflowToolbar>
				</footer>		-->
			</Page>
		</pages>
		</NavContainer>
	</App>
</mvc:View>